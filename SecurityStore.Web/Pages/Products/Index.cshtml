@page
@model SecurityStore.Web.Pages.Products.IndexModel
@{
    ViewData["Title"] = "محصولات";
}

<div class="row">
    <div class="col-md-12">
        <h2><i class="bi bi-box"></i> محصولات</h2>
        <hr>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchTerm" class="form-control" placeholder="جستجو..." value="@Model.SearchTerm">
            </div>
            <div class="col-md-3">
                <select name="categoryId" class="form-select">
                    <option value="">همه دسته‌بندی‌ها</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">@category.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select name="sortBy" class="form-select">
                    <option value="newest" selected="@(Model.SortBy == "newest")">جدیدترین</option>
                    <option value="price-low" selected="@(Model.SortBy == "price-low")">ارزان‌ترین</option>
                    <option value="price-high" selected="@(Model.SortBy == "price-high")">گران‌ترین</option>
                    <option value="popular" selected="@(Model.SortBy == "popular")">محبوب‌ترین</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> جستجو</button>
                <a asp-page="/Products/Index" class="btn btn-secondary"><i class="bi bi-x"></i> پاک کردن</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Products.Any())
{
    <div class="row g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    @if (product.MainImage != null)
                    {
                        <img src="@product.MainImage" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-image display-3 text-muted"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.ShortDescription</p>
                        
                        @if (product.Brand != null)
                        {
                            <p class="mb-2"><small class="text-muted"><i class="bi bi-tag"></i> @product.Brand</small></p>
                        }
                        
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div>
                                @if (product.DiscountPrice.HasValue)
                                {
                                    <span class="text-decoration-line-through text-muted d-block">@product.Price.ToString("N0") تومان</span>
                                    <span class="h5 text-danger">@product.DiscountPrice.Value.ToString("N0") تومان</span>
                                }
                                else
                                {
                                    <span class="h5">@product.Price.ToString("N0") تومان</span>
                                }
                            </div>
                        </div>
                        
                        @if (product.StockQuantity > 0)
                        {
                            <span class="badge bg-success mt-2"><i class="bi bi-check-circle"></i> موجود</span>
                        }
                        else
                        {
                            <span class="badge bg-danger mt-2"><i class="bi bi-x-circle"></i> ناموجود</span>
                        }
                    </div>
                    <div class="card-footer bg-white">
                        <a asp-page="/Products/Details" asp-route-id="@product.Id" class="btn btn-primary w-100">
                            <i class="bi bi-eye"></i> مشاهده جزئیات
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="/Products/Index" 
                           asp-route-page="@(Model.CurrentPage - 1)"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-categoryId="@Model.CategoryId"
                           asp-route-sortBy="@Model.SortBy">قبلی</a>
                    </li>
                }
                
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="/Products/Index" 
                           asp-route-page="@i"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-categoryId="@Model.CategoryId"
                           asp-route-sortBy="@Model.SortBy">@i</a>
                    </li>
                }
                
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="/Products/Index" 
                           asp-route-page="@(Model.CurrentPage + 1)"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-categoryId="@Model.CategoryId"
                           asp-route-sortBy="@Model.SortBy">بعدی</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> محصولی یافت نشد.
    </div>
}
