@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin,Manager")]
@model SecurityStore.Web.Pages.Admin.Products.CreateModel
@{
    ViewData["Title"] = "افزودن محصول جدید";
}

<h2><i class="bi bi-plus-circle"></i> افزودن محصول جدید</h2>
<hr>

<form method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5>اطلاعات اصلی</h5>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Sku" class="form-label"></label>
                        <input asp-for="Input.Sku" class="form-control" />
                        <span asp-validation-for="Input.Sku" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.ShortDescription" class="form-label"></label>
                        <textarea asp-for="Input.ShortDescription" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Input.ShortDescription" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.LongDescription" class="form-label"></label>
                        <textarea asp-for="Input.LongDescription" class="form-control" rows="5"></textarea>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.CategoryId" class="form-label"></label>
                            <select asp-for="Input.CategoryId" class="form-select" asp-items="Model.CategorySelectList">
                                <option value="">انتخاب دسته‌بندی</option>
                            </select>
                            <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Brand" class="form-label"></label>
                            <input asp-for="Input.Brand" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.Price" class="form-label"></label>
                            <input asp-for="Input.Price" class="form-control" type="number" step="1000" />
                            <span asp-validation-for="Input.Price" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.DiscountPrice" class="form-label"></label>
                            <input asp-for="Input.DiscountPrice" class="form-control" type="number" step="1000" />
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.StockQuantity" class="form-label"></label>
                            <input asp-for="Input.StockQuantity" class="form-control" type="number" />
                            <span asp-validation-for="Input.StockQuantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5>تنظیمات</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Input.Slug" class="form-label"></label>
                        <input asp-for="Input.Slug" class="form-control" />
                        <span asp-validation-for="Input.Slug" class="text-danger"></span>
                        <small class="text-muted">URL-friendly نام برای آدرس صفحه</small>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="Input.IsActive" class="form-check-input" />
                        <label asp-for="Input.IsActive" class="form-check-label"></label>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="Input.IsFeatured" class="form-check-input" />
                        <label asp-for="Input.IsFeatured" class="form-check-label"></label>
                    </div>
                </div>
            </div>
            
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle"></i> ذخیره محصول
                </button>
                <a asp-page="/Admin/Products/Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> انصراف
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // تولید خودکار Slug از نام
        // Auto-generate Slug from name
        document.querySelector('input[name="Input.Name"]').addEventListener('input', function(e) {
            var slugInput = document.querySelector('input[name="Input.Slug"]');
            if (slugInput.value === '') {
                var slug = e.target.value
                    .toLowerCase()
                    .replace(/\s+/g, '-')
                    .replace(/[^\w\-]+/g, '')
                    .replace(/\-\-+/g, '-')
                    .replace(/^-+/, '')
                    .replace(/-+$/, '');
                slugInput.value = slug;
            }
        });
    </script>
}
