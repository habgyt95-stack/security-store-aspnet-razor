@page "{id:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin,Manager")]
@model SecurityStore.Web.Pages.Admin.Products.EditModel
@{
    ViewData["Title"] = "ویرایش محصول";
}

<h2><i class="bi bi-pencil-square"></i> ویرایش محصول</h2>
<hr>

<form method="post">
    <input type="hidden" asp-for="Input.Id" />
    
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> اطلاعات اصلی</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ShortDescription" class="form-label"></label>
                        <textarea asp-for="Input.ShortDescription" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Input.ShortDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.LongDescription" class="form-label"></label>
                        <textarea asp-for="Input.LongDescription" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Input.LongDescription" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Slug" class="form-label"></label>
                            <input asp-for="Input.Slug" class="form-control" />
                            <span asp-validation-for="Input.Slug" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Sku" class="form-label"></label>
                            <input asp-for="Input.Sku" class="form-control" />
                            <span asp-validation-for="Input.Sku" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    <h5><i class="bi bi-currency-dollar"></i> قیمت و موجودی</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Price" class="form-label"></label>
                            <input asp-for="Input.Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Input.Price" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.DiscountPrice" class="form-label"></label>
                            <input asp-for="Input.DiscountPrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Input.DiscountPrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.StockQuantity" class="form-label"></label>
                        <input asp-for="Input.StockQuantity" class="form-control" type="number" />
                        <span asp-validation-for="Input.StockQuantity" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5><i class="bi bi-gear"></i> تنظیمات</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Input.CategoryId" class="form-label"></label>
                        <select asp-for="Input.CategoryId" asp-items="Model.CategorySelectList" class="form-select">
                            <option value="">-- انتخاب دسته‌بندی --</option>
                        </select>
                        <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Brand" class="form-label"></label>
                        <input asp-for="Input.Brand" class="form-control" />
                        <span asp-validation-for="Input.Brand" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.MainImage" class="form-label"></label>
                        <input asp-for="Input.MainImage" class="form-control" />
                        <span asp-validation-for="Input.MainImage" class="text-danger"></span>
                        <div class="form-text">آدرس URL تصویر اصلی محصول</div>
                        @if (!string.IsNullOrEmpty(Model.Input.MainImage))
                        {
                            <img src="@Model.Input.MainImage" alt="تصویر فعلی" class="img-thumbnail mt-2" style="max-height: 150px;" />
                        }
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="Input.IsActive" class="form-check-input" />
                        <label asp-for="Input.IsActive" class="form-check-label"></label>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="Input.IsFeatured" class="form-check-input" />
                        <label asp-for="Input.IsFeatured" class="form-check-label"></label>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    <h5><i class="bi bi-info"></i> اطلاعات اضافی</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>تاریخ ایجاد:</strong> @Model.Product.CreatedAt.ToString("yyyy/MM/dd HH:mm")</p>
                    <p class="mb-1"><strong>آخرین بروزرسانی:</strong> @Model.Product.UpdatedAt?.ToString("yyyy/MM/dd HH:mm")</p>
                    <p class="mb-0"><strong>تعداد بازدید:</strong> @Model.Product.ViewCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> ذخیره تغییرات
        </button>
        <a href="/Admin/Products" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> انصراف
        </a>
        <a href="/Products/Details/@Model.Product.Id" class="btn btn-outline-info" target="_blank">
            <i class="bi bi-eye"></i> مشاهده محصول
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
