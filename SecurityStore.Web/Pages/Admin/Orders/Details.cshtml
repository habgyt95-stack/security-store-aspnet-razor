@page "{id:int}"
@using Microsoft.AspNetCore.Authorization
@using SecurityStore.Domain.Enums
@attribute [Authorize(Roles = "Admin,Manager")]
@model SecurityStore.Web.Pages.Admin.Orders.DetailsModel
@{
    ViewData["Title"] = "جزئیات سفارش";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-receipt"></i> جزئیات سفارش #@Model.Order.OrderNumber</h2>
    <a asp-page="/Admin/Orders/Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-right"></i> بازگشت به لیست
    </a>
</div>
<hr>

<div class="row">
    <div class="col-md-8">
        <!-- Order Items -->
        <div class="card mb-3">
            <div class="card-header">
                <h5><i class="bi bi-box-seam"></i> اقلام سفارش</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>محصول</th>
                                <th>قیمت واحد</th>
                                <th>تعداد</th>
                                <th>جمع</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Order.OrderItems)
                            {
                                <tr>
                                    <td><strong>@item.ProductName</strong></td>
                                    <td>@item.UnitPrice.ToString("N0") تومان</td>
                                    <td><span class="badge bg-primary">@item.Quantity</span></td>
                                    <td><strong>@item.TotalPrice.ToString("N0") تومان</strong></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="4" class="text-start"><strong>جمع کل:</strong></td>
                                <td><strong>@Model.Order.SubTotal.ToString("N0") تومان</strong></td>
                            </tr>
                            <tr>
                                <td colspan="4" class="text-start"><strong>هزینه ارسال:</strong></td>
                                <td><strong>@Model.Order.ShippingCost.ToString("N0") تومان</strong></td>
                            </tr>
                            @if (Model.Order.Discount > 0)
                            {
                                <tr>
                                    <td colspan="4" class="text-start text-success"><strong>تخفیف:</strong></td>
                                    <td class="text-success"><strong>-@Model.Order.Discount.ToString("N0") تومان</strong></td>
                                </tr>
                            }
                            @if (Model.Order.Tax > 0)
                            {
                                <tr>
                                    <td colspan="4" class="text-start"><strong>مالیات:</strong></td>
                                    <td><strong>@Model.Order.Tax.ToString("N0") تومان</strong></td>
                                </tr>
                            }
                            <tr class="table-active">
                                <td colspan="4" class="text-start"><strong>مبلغ نهایی:</strong></td>
                                <td><strong class="text-primary fs-5">@Model.Order.TotalAmount.ToString("N0") تومان</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Customer Notes -->
        @if (!string.IsNullOrEmpty(Model.Order.Notes))
        {
            <div class="alert alert-info">
                <h6><i class="bi bi-chat-left-text"></i> یادداشت مشتری:</h6>
                <p class="mb-0">@Model.Order.Notes</p>
            </div>
        }
    </div>

    <div class="col-md-4">
        <!-- Order Status -->
        <div class="card mb-3">
            <div class="card-header">
                <h5><i class="bi bi-info-circle"></i> وضعیت سفارش</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="UpdateStatus">
                    <div class="mb-3">
                        <label class="form-label">وضعیت فعلی</label>
                        <select name="status" class="form-select" required>
                            <option value="@((int)OrderStatus.Pending)" selected="@(Model.Order.Status == OrderStatus.Pending)">در انتظار پردازش</option>
                            <option value="@((int)OrderStatus.Processing)" selected="@(Model.Order.Status == OrderStatus.Processing)">در حال پردازش</option>
                            <option value="@((int)OrderStatus.Shipped)" selected="@(Model.Order.Status == OrderStatus.Shipped)">ارسال شده</option>
                            <option value="@((int)OrderStatus.Delivered)" selected="@(Model.Order.Status == OrderStatus.Delivered)">تحویل داده شده</option>
                            <option value="@((int)OrderStatus.Cancelled)" selected="@(Model.Order.Status == OrderStatus.Cancelled)">لغو شده</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-save"></i> بروزرسانی وضعیت
                    </button>
                </form>
            </div>
        </div>

        <!-- Order Information -->
        <div class="card mb-3">
            <div class="card-header">
                <h5><i class="bi bi-calendar"></i> اطلاعات سفارش</h5>
            </div>
            <div class="card-body">
                <p class="mb-2"><strong>تاریخ ثبت:</strong><br>@Model.Order.CreatedAt.ToString("yyyy/MM/dd HH:mm")</p>
                @if (Model.Order.UpdatedAt.HasValue)
                {
                    <p class="mb-2"><strong>آخرین بروزرسانی:</strong><br>@Model.Order.UpdatedAt.Value.ToString("yyyy/MM/dd HH:mm")</p>
                }
                @if (Model.Order.PaidAt.HasValue)
                {
                    <p class="mb-2 text-success"><strong><i class="bi bi-check-circle-fill"></i> پرداخت شده:</strong><br>@Model.Order.PaidAt.Value.ToString("yyyy/MM/dd HH:mm")</p>
                }
                @if (!string.IsNullOrEmpty(Model.Order.TransactionId))
                {
                    <p class="mb-2"><strong>شناسه تراکنش:</strong><br>@Model.Order.TransactionId</p>
                }
                @if (!string.IsNullOrEmpty(Model.Order.PaymentMethod))
                {
                    <p class="mb-0"><strong>روش پرداخت:</strong><br>@Model.Order.PaymentMethod</p>
                }
            </div>
        </div>

        <!-- Shipping Information -->
        <div class="card mb-3">
            <div class="card-header">
                <h5><i class="bi bi-truck"></i> اطلاعات ارسال</h5>
            </div>
            <div class="card-body">
                <p class="mb-2"><strong>آدرس:</strong><br>@Model.Order.ShippingAddress</p>
                <p class="mb-2"><strong>شهر:</strong> @Model.Order.ShippingCity</p>
                <p class="mb-2"><strong>کد پستی:</strong> @Model.Order.ShippingPostalCode</p>
                <p class="mb-0"><strong>تلفن:</strong> @Model.Order.ShippingPhone</p>
            </div>
        </div>

        <!-- Customer Information -->
        @if (Model.Customer != null)
        {
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-person"></i> اطلاعات مشتری</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>نام:</strong> @Model.Customer.FullName</p>
                    <p class="mb-2"><strong>ایمیل:</strong> @Model.Customer.Email</p>
                    @if (!string.IsNullOrEmpty(Model.Customer.PhoneNumber))
                    {
                        <p class="mb-0"><strong>تلفن:</strong> @Model.Customer.PhoneNumber</p>
                    }
                </div>
            </div>
        }
    </div>
</div>
