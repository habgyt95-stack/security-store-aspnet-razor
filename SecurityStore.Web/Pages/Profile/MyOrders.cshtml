@page
@using Microsoft.AspNetCore.Authorization
@using SecurityStore.Domain.Enums
@attribute [Authorize]
@model SecurityStore.Web.Pages.Profile.MyOrdersModel
@{
    ViewData["Title"] = "سفارشات من";
}

<div class="container my-4">
    <h2><i class="bi bi-bag-check"></i> سفارشات من</h2>
    <hr>

    @if (!Model.Orders.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">هنوز سفارشی ثبت نکرده‌اید</h4>
            <p>برای ثبت اولین سفارش خود، از فروشگاه بازدید کنید.</p>
            <a href="/Products" class="btn btn-primary mt-2">
                <i class="bi bi-shop"></i> مشاهده محصولات
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model.Orders)
            {
                <div class="col-md-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <strong><i class="bi bi-receipt"></i> سفارش #@order.OrderNumber</strong>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> @order.CreatedAt.ToString("yyyy/MM/dd - HH:mm")
                                    </small>
                                </div>
                                <div class="col-md-3">
                                    <span class="badge bg-@Model.GetStatusBadgeClass(order.Status)">
                                        @Model.GetStatusText(order.Status)
                                    </span>
                                </div>
                                <div class="col-md-3 text-start">
                                    <strong class="text-primary">@order.TotalAmount.ToString("N0") تومان</strong>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6><i class="bi bi-box-seam"></i> اقلام سفارش:</h6>
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>محصول</th>
                                                    <th>تعداد</th>
                                                    <th>قیمت واحد</th>
                                                    <th>جمع</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in order.OrderItems)
                                                {
                                                    <tr>
                                                        <td>@item.ProductName</td>
                                                        <td>@item.Quantity</td>
                                                        <td>@item.UnitPrice.ToString("N0") تومان</td>
                                                        <td>@((item.Quantity * item.UnitPrice).ToString("N0")) تومان</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <h6><i class="bi bi-truck"></i> آدرس ارسال:</h6>
                                    <p class="mb-1">@order.ShippingAddress</p>
                                    <p class="mb-1">@order.ShippingCity - @order.ShippingPostalCode</p>
                                    <p class="mb-1"><i class="bi bi-telephone"></i> @order.ShippingPhone</p>
                                    
                                    @if (order.PaidAt.HasValue)
                                    {
                                        <div class="mt-3">
                                            <small class="text-success">
                                                <i class="bi bi-check-circle-fill"></i> پرداخت شده در: @order.PaidAt.Value.ToString("yyyy/MM/dd HH:mm")
                                            </small>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(order.TransactionId))
                                    {
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                <i class="bi bi-credit-card"></i> شناسه تراکنش: @order.TransactionId
                                            </small>
                                        </div>
                                    }
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(order.Notes))
                            {
                                <div class="mt-3">
                                    <h6><i class="bi bi-chat-left-text"></i> یادداشت:</h6>
                                    <p class="text-muted">@order.Notes</p>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-light text-end">
                            <div class="row align-items-center">
                                <div class="col-md-6 text-start">
                                    <small class="text-muted">
                                        جمع کل: @order.SubTotal.ToString("N0") تومان + 
                                        هزینه ارسال: @order.ShippingCost.ToString("N0") تومان
                                    </small>
                                </div>
                                <div class="col-md-6">
                                    <a href="/Cart/OrderComplete/@order.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> مشاهده جزئیات
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="/Profile/MyOrders" asp-route-page="@(Model.CurrentPage - 1)">
                            <i class="bi bi-chevron-right"></i> قبلی
                        </a>
                    </li>
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="/Profile/MyOrders" asp-route-page="@i">@i</a>
                        </li>
                    }
                    
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="/Profile/MyOrders" asp-route-page="@(Model.CurrentPage + 1)">
                            بعدی <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
