@page
@model ErrorModel
@{
    ViewData["Title"] = "خطا - Error";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h1 class="text-danger mb-3">خطا</h1>
                    <h2 class="text-danger mb-4">خطایی در پردازش درخواست شما رخ داد</h2>
                    
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-info">
                            <strong>شناسه درخواست:</strong> <code>@Model.RequestId</code>
                        </div>
                    }
                    
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house"></i> بازگشت به صفحه اصلی
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-right"></i> بازگشت به صفحه قبل
                        </a>
                    </div>
                </div>
            </div>
            
            @if (Model.ShowDevelopmentInfo)
            {
                <div class="alert alert-warning mt-4 text-end">
                    <h5><i class="bi bi-tools"></i> حالت توسعه (Development Mode)</h5>
                    <hr>
                    <p>
                        تغییر به محیط <strong>Development</strong> اطلاعات دقیق خطا را نمایش می‌دهد.
                    </p>
                    <p>
                        <strong>محیط Development نباید برای برنامه‌های منتشرشده فعال باشد.</strong>
                        این می‌تواند منجر به نمایش اطلاعات حساس به کاربران نهایی شود.
                    </p>
                    <p>
                        برای دیباگ محلی، متغیر محیطی <strong>ASPNETCORE_ENVIRONMENT</strong> را به <strong>Development</strong> تنظیم کنید.
                    </p>
                </div>
            }
        </div>
    </div>
</div>
