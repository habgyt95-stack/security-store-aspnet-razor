@page
@model SecurityStore.Web.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "بازیابی رمز عبور";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-lock-fill text-primary" style="font-size: 3rem;"></i>
                        <h2 class="mt-3">بازیابی رمز عبور</h2>
                        <p class="text-muted">رمز عبور جدید خود را وارد کنید</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.PasswordReset)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle-fill"></i> 
                            <strong>موفقیت!</strong> 
                            رمز عبور شما با موفقیت تغییر کرد. اکنون می‌توانید با رمز عبور جدید وارد شوید.
                        </div>
                        <div class="text-center mt-3">
                            <a href="/Account/Login" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-left"></i> ورود به حساب کاربری
                            </a>
                        </div>
                    }
                    else
                    {
                        <form method="post">
                            <input type="hidden" asp-for="Input.UserId" />
                            <input type="hidden" asp-for="Input.Token" />

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input asp-for="Input.Password" class="form-control" type="password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                <div class="form-text">حداقل 6 کاراکتر، شامل حروف بزرگ، کوچک و عدد</div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> تغییر رمز عبور
                                </button>
                                <a href="/Account/Login" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-right"></i> بازگشت به ورود
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
