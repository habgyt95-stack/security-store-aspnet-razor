@page
@model SecurityStore.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "ورود";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="text-center mb-4"><i class="bi bi-box-arrow-in-right"></i> ورود به حساب کاربری</h2>
                
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label"></label>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> ورود
                        </button>
                    </div>
                </form>
                
                <div class="text-center mt-3">
                    <p>حساب کاربری ندارید؟ <a asp-page="/Account/Register">ثبت‌نام کنید</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
