@using Microsoft.AspNetCore.Identity
@using SecurityStore.Infrastructure.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - فروشگاه امنیتی</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="bi bi-shield-check"></i> فروشگاه امنیتی
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index"><i class="bi bi-house"></i> خانه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Products/Index"><i class="bi bi-box"></i> محصولات</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Manager")))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Admin/Index"><i class="bi bi-speedometer2"></i> پنل مدیریت</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Cart/Index">
                                <i class="bi bi-cart"></i> سبد خرید
                            </a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User.Identity?.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-page="/Profile/MyOrders"><i class="bi bi-bag-check"></i> سفارشات من</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-page="/Account/Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-left"></i> خروج</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> ورود</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Register"><i class="bi bi-person-plus"></i> ثبت‌نام</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="bi bi-shield-check"></i> فروشگاه امنیتی</h5>
                    <p>فروشگاه آنلاین تجهیزات امنیتی</p>
                </div>
                <div class="col-md-4">
                    <h5>لینک‌های مفید</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">درباره ما</a></li>
                        <li><a href="#" class="text-white-50">تماس با ما</a></li>
                        <li><a href="#" class="text-white-50">شرایط و قوانین</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>تماس با ما</h5>
                    <p class="text-white-50">
                        <i class="bi bi-telephone"></i> 021-12345678<br>
                        <i class="bi bi-envelope"></i> info@securitystore.com
                    </p>
                </div>
            </div>
            <hr class="bg-white">
            <div class="text-center">
                <p class="mb-0">&copy; 2025 فروشگاه امنیتی - تمامی حقوق محفوظ است</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
