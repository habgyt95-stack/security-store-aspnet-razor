@page
@{
    ViewData["Title"] = "صفحه پیدا نشد";
    Response.StatusCode = 404;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <h1 class="display-1 text-primary">404</h1>
                    </div>
                    
                    <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
                    
                    <h2 class="mt-3 mb-3">صفحه مورد نظر یافت نشد</h2>
                    <p class="text-muted mb-4">
                        متأسفانه صفحه‌ای که به دنبال آن هستید وجود ندارد یا منتقل شده است.
                    </p>
                    
                    <div class="d-flex gap-2 justify-content-center flex-wrap">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house"></i> بازگشت به صفحه اصلی
                        </a>
                        <a href="/Products" class="btn btn-outline-primary">
                            <i class="bi bi-shop"></i> مشاهده محصولات
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-right"></i> بازگشت به صفحه قبل
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <h5 class="mb-3">دسته‌بندی‌های محبوب</h5>
                <div class="d-flex gap-2 justify-content-center flex-wrap">
                    <a href="/Products?categoryId=1" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-camera-video"></i> دوربین مداربسته
                    </a>
                    <a href="/Products?categoryId=2" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-shield-exclamation"></i> دزدگیر
                    </a>
                    <a href="/Products?categoryId=3" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-reception-4"></i> سنسورها
                    </a>
                    <a href="/Products?categoryId=4" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-door-closed"></i> کنترل تردد
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
